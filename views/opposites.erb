<!doctype html>
<head>
	<title>Opposites Attract</title>
	<link href="/css/main.css" rel="stylesheet" type="text/css">
	<link href="/css/bootstrap/css/bootstrap.css" rel="stylesheet">
	<script src="/js/jquery.js"></script>
</head>
<body>
	<% if @name %>
		<h1>Hello <%= @name %>...</h1>
	<% else %>
		<h1>Hello...</h1>
	<% end %>

	<div id="contact-form">
		<h1>Sign up here!</h1>
		<form method="post" action="/signup">  <!-- '/signup' action is URL that the form will be submitted to, relevant to absolute URL (localhost:4567)-->
			<label for ="name">Name: </label>
			<input type="text" id="name" name="name" value="" placeholder="Write name here" required="required" autofocus="autofocus"/>
			<label for="email">Email address: </label>
			<input type="email" id="email" name="email" value="" placeholder="example@example.com" required="required"/>
			<label for ="gender">Age: </label>
			<input type="text" id="age" name="age" value="" placeholder="Write age here" required ="required" autofocus="autofocus"/>
			<label for ="gender">Gender: </label>
			<input type="text" id="gender" name="gender" value="" placeholder="Write gender here" required ="required" autofocus="autofocus"/>
			<label for="looking_for">Looking for: </label>
			<input type="text" id="looking_for" name="looking_for" value="" placeholder="Male/Female/Other" required="required" autofocus="autofocus"/>
			<input type="submit" value="submit" id="submit-button">
		</form>
	</div>
</body>